@model School_Management.Models.TeacherModel

@{
    ViewData["Title"] = "CreateTeacher";
}


<div class="section mt-3 mr-5">
    <div class="bg-dark p-3 roundCorder">
        <h4>Create Teacher</h4>
    </div>

    <div class="row mt-4">

        <div class="col-md-12">
            <form asp-action="CreateStudent">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label>Personal Information</label>
                <div>
                    <div class="bg-dark roundCorder">
                        <div class="input-group p-3">
                            <input asp-for="Names" class="form-control" placeholder="Names" />
                            <span asp-validation-for="Names" class="text-danger"></span>

                            <span class="input-group-addon m-3"></span>

                            <input name="DOB" class="form-control" placeholder="DOB" type="date" required />
                        </div>

                        <div class="input-group p-3">
                            <input name="NRC" class="form-control" placeholder="NRC" required />

                            <span class="input-group-addon m-3"></span>

                           <input name="Qualification" class="form-control" placeholder="Qualifications" type="file" required />
                        </div>
                    </div>
                </div>
                  

                <label class="mt-4">Account Information</label>
                <div>
                    <div class="bg-dark roundCorder">
                        <div class="input-group p-3">
                            <input name="Email" class="form-control" placeholder="Email Address" required />

                            <span class="input-group-addon m-3"></span>

                            <input name="Password" class="form-control" placeholder="Password" type="password" required />
                        </div>
                        <div class="input-group p-3">
                            <input name="Salary" class="form-control" placeholder="Salary" required /> 
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Proceed To Account" class="btn btn-primary w-100 mt-4" />
                </div>
            </form>
        </div>
    </div>
</div>


 

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
