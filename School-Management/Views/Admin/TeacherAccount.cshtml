@model School_Management.Models.TeacherModel

@{
    ViewData["Title"] = "TeacherAccount";
}

<div class="section mt-3 mr-5">
    <div class="bg-dark p-3 roundCorder">
        <h4>Teacher Account</h4>
    </div>
    <p class="mt-3">
        <a asp-action="CreateTeacher">Create New Teacher</a>
    </p>

    <div class=" mt-4">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => Model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Names)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => Model.Names)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DOB)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => Model.DOB)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => Model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => Model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Qualification)
            </dt>
            <dd class="col-sm-10">
                <a href="@Html.DisplayFor(modelItem => Model.Qualification)" class="btn-link" style="cursor:pointer">PDF File</a>

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubjectsTeaching)
            </dt>
            <dd class="col-sm-10">
                @foreach (var item in Model.SubjectsTeaching)
                {
                <div>
                    @Html.DisplayFor(modelItem => item.Text)
                </div>
                    
                    
                }
            </dd> 
        </dl>
    </div>

</div>
